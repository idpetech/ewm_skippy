# LLM Provider Configuration
# Supported providers: openai, azure_openai, anthropic, local
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your-gpt-deployment
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=your-embedding-deployment

# Anthropic Configuration (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Local LLM Configuration (e.g., Ollama)
LOCAL_LLM_BASE_URL=http://localhost:11434
LOCAL_LLM_MODEL=llama2:7b
LOCAL_EMBEDDING_MODEL=nomic-embed-text

# Application Configuration
APP_TITLE=Skippy - SAP EWM Assistant
APP_DESCRIPTION=Your friendly SAP Extended Warehouse Management coach

# ChromaDB Configuration
CHROMA_DB_PATH=./data/chroma_db
COLLECTION_NAME=sap_ewm_docs

# PDF Processing
PDF_DATA_PATH=./data/pdfs
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# LLM Settings
MAX_TOKENS=2000
TEMPERATURE=0.7

# Retrieval Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# UI Configuration
SKIPPY_AVATAR_PATH=./assets/avatars/skippy.png
CHAT_THEME=light

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/skippy.log

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:8501
