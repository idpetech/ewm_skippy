# Skippy Coach Configuration
# Copy this file to .env and fill in your actual values

# Azure OpenAI Embedding Configuration
AZURE_EMBEDDING_ENDPOINT=https://your-embedding-endpoint.openai.azure.com/
AZURE_EMBEDDING_API_KEY=your-embedding-api-key-here
AZURE_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
AZURE_EMBEDDING_API_VERSION=2022-12-01

# Azure OpenAI Chat Configuration
AZURE_CHAT_ENDPOINT=https://your-chat-endpoint.openai.azure.com/
AZURE_CHAT_API_KEY=your-chat-api-key-here
AZURE_CHAT_DEPLOYMENT=gpt-4o
AZURE_CHAT_API_VERSION=2023-05-15

# Database Configuration
CHROMA_DB_PATH=./chroma

# Application Settings (Optional - defaults will be used if not set)
MAX_CLARIFICATIONS=5
DOC_RETRIEVAL_COUNT=3
LLM_TEMPERATURE=0.1
